<div class="container">
  <div class="page-header">
    <h1><%= "#{params[:tab]} Products" %></h1>
  </div>

  
  <ul class="nav nav-pills nav-justified" role="tablist">
    <%= product_tab 'Hot', active: params[:tab] == 'Hot' %>
    <%= product_tab 'All', active: params[:tab] == 'All' %>
  </ul>
  <table class="products-list table table table-hover">
    <thead>
      <tr>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <%= render @products %>
    </tbody>
  </table>
  <%= paginate @products %>
</div>